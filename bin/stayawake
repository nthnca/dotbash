#!/bin/bash

# When I am just ssh'ed into a machine, they will still fall asleep, running
# this periodically simulated user activity and will keep things awake.

# Don't run this on machines that don't have X installed.
which X >/dev/null                                                              
if [ $? -ne 0 ]; then                                                           
  exit 0                                                                        
fi

export DISPLAY=:0.0

dbus-send --session --dest=org.gnome.ScreenSaver --type=method_call \
    /org/gnome/ScreenSaver org.gnome.ScreenSaver.SimulateUserActivity

logger -t stayawake "Stay Awake"
